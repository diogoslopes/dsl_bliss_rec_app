<Page
    x:Class="BlissApp.QuestionsScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BlissApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource AppBarBackgroundThemeBrush}">

        <TextBlock x:Name="questionScreenTitle" HorizontalAlignment="Center" Margin="0,150,0,0" TextWrapping="Wrap" Text="Questions Screen" VerticalAlignment="Top" TextAlignment="Center" FontSize="48"/>
        <ListView x:Name="questionList" HorizontalAlignment="Center" Margin="0,400,0,0" VerticalAlignment="Top" Width="400" Padding="0,0,0,10" ItemClick="questionList_ItemClick" IsItemClickEnabled="True">


        </ListView>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,240,0,0" Width="395">
            <TextBox x:Name="searchBox" HorizontalAlignment="Left" Margin="0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="32" Width="300" PlaceholderText="Search Question"/>
            <Button x:Name="searchButton" Content="Search" HorizontalAlignment="Right" Margin="0" VerticalAlignment="Top" Height="55" Click="searchButton_Click" />
        </Grid>


    </Grid>
</Page>
